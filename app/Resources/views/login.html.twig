 #}<link rel="stylesheet" href="{{ asset('bundles/gestionpass/css/bootstrap-responsive.css') }}" type="text/css" media="all" /> 
        <link rel="stylesheet" href="{{  asset('bundles/gestionpass/css/jquery-ui.css')}}"type="text/css" media="all" /> 

        <style>    
                body {
                    padding-top: 40px;
                    padding-bottom: 40px;
                    background-color: #f5f5f5;
                }

                .form-signin {
                    max-width: 300px;
                    padding: 19px 29px 29px;
                    margin: 0 auto 20px;
                    background-color: #fff;
                    border: 1px solid #e5e5e5;
                    -webkit-border-radius: 5px;
                    -moz-border-radius: 5px;
                    border-radius: 5px;
                    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                    box-shadow: 0 1px 2px rgba(0,0,0,.05);
                }
                .form-signin .form-signin-heading,
                .form-signin .checkbox {
                    margin-bottom: 10px;
                }
                .form-signin input[type="text"],
                .form-signin input[type="password"] {
                    font-size: 16px;
                    height: auto;
                    margin-bottom: 15px;
                    padding: 7px 9px;
                }
                
                p{
                    margin: 0px 470px 10px !important;}
            </style>

               {% endblock %}
{% block javascripts %}

            <script type="text/javascript" src="{{ asset('bundles/gestionpass/js/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/gestionpass/js/bootstrap.min.js') }}"></script>

{% endblock %}
