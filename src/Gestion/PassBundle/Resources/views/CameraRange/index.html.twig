{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CameraRange list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Daterange</th>
                <th>Heuredeburange</th>
                <th>Heurefinrange</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('camerarange_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dateRange %}{{ entity.dateRange|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.heureDebuRange|date('H:i:s') }}</td>
                <td>{{ entity.heureFinRange|date('H:i:s') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('camerarange_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('camerarange_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('camerarange_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
