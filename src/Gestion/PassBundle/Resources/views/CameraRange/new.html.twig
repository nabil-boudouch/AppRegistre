        <div class="error form-group">{{ form_errors(form) }}
        </div>
        <div class="form-group">

            <label>  {{ form_label(form.Camera) }}</label><br>
                        {{ form_errors(form.Camera) }}
                        {{ form_widget(form.Camera,{
                        'id' :'nomCamera', 
