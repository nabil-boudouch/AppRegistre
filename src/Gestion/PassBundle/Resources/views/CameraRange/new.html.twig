                        <input type="submit"  class="newEntry btn btn-primary row-fluid" >

                    </form>
                      
        <ul class="record_actions">
    <li>
        <a href="{{ path('camerarange') }}">
            Back to the list
        </a>
    </li>
</ul>
                  </div>
</div>
                </div>

{% endblock %}
