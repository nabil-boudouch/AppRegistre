{% extends 'GestionPassBundle::layout.html.twig' %}

{% block formulaire %}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-edit"></i> Modifier Consigne </h3>
            </div>
            <div class="panel-body">
                <form  role="form" action= "{{ path('consigne_update', {'id': id}) }} " method="post"  {{ form_enctype(edit_form) }} >
                    <div class="error form-group">{{ form_errors(edit_form) }}
                    </div>
                    <div class="form-group">
                        <label>  {{ form_label(edit_form.objet) }}</label>
                                {{ form_errors(edit_form.objet) }}
                                {{ form_widget(edit_form.objet,{
                        'id' :'objet', 
'attr': {
                         'class' : 'form-control',
                },
                }) }}
                    </div>
                    <div class="form-group">
                        <label>   {{ form_label(edit_form.contenu) }}</label>
                                {{ form_errors(edit_form.contenu) }}
                                {{ form_widget(edit_form.contenu ,{
                        'id' :'consigneContenuEdit', 
'attr': {
                         'class' : 'form-control',
                },
                }) }}
                    </div>
                    <div class="form-group">
                       {{form_widget(edit_form._token)}}
                        </div>

                        <input type="submit" class="newEntry btn btn-primary row-fluid">           

                    </form>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
