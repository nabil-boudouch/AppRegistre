{% block formulaire%}

<div class="row">
<div class="col-lg-12">
<div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"> <i class="fa fa-edit"></i> Nouvelle Consigne </h3>
            </div>
              <div class="panel-body">
    <form  role="form" action= "{{ path('consigne_create') }} " method="post"  {{ form_enctype(form) }} >
        <div class="error form-group">{{ form_errors(form) }}
        </div>
        <div class="form-group">

            <label>  {{ form_label(form.objet) }}</label>
                        {{ form_errors(form.objet) }}
                        {{ form_widget(form.objet,{
                        'id' :'objet', 
'attr': {
                         'class' : 'form-control',
                },
                }) }}

        </div>
        
 <div class="form-group">

            <label>  {{ form_label(form.contenu) }}</label>
                        {{ form_errors(form.contenu) }}
                        {{ form_widget(form.contenu,{
                        'id' :'consigneContenu', 
'attr': {
                         'class' : 'form-control',
                },
                }) }}

            
         
                    <div class="form-group">
                       {{form_widget(form._token)}}
                        </div>

                        <input type="submit" class="newEntry btn btn-primary row-fluid" >

                    </form>
                  </div>
</div>
                </div>

{% endblock %}