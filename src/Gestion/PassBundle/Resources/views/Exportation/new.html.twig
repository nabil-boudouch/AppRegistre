            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"> <i class="fa fa-edit"></i> Nouvelle Exportation </h3>
                </div>
                <div class="panel-body">
                    <form  role="form" class="form-inline" action= "{{ path('exportation_create') }} " method="post"  {{ form_enctype(form) }} >
