{% form_theme form 'GestionPassBundle:Exportation:formTheming.html.twig' %}

{% block formulaire %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"> <i class="fa fa-edit"></i> Nouvelle Exportation </h3>
                </div>
                <div class="panel-body">
                    <form  role="form" class="form-inline" action= "{{ path('exportation_create') }} " method="post"  {{ form_enctype(form) }} >
                        <div class="error form-group">{{ form_errors(form) }}
                        </div>
            
                     <div class="form-group">
                                    {{ form_label(form.beneficiaire) }}
                                    {{ form_errors(form.beneficiaire) }}
                                    {{ form_widget(form.beneficiaire,{
                                    'id' :'beneficiaire', 
            'attr': {
                                     'class' : 'form-control',
                            },
                            }) }}
                        </div> <br>
                        <div class="form-group">

                         {{ form_label(form.organisme) }}
                        {{ form_errors(form.organisme) }}
                        {{ form_widget(form.organisme,{
                        'id' :'organisme', 
'attr': {
                         'class' : 'form-control label-organisme',
                },
                }) }}
                        </div> <br>
                                          <div class="form-group">
                        {{ form_label(form.objet) }}
                        {{ form_errors(form.objet) }}
                        {{ form_widget(form.objet,{
                        'id' :'objet', 
'attr': {
                         'class' : 'form-control',
                },
                }) }}
                        </div> <br> 
{{ form_rest(form) }}

                    </form>
                                    </div>
            </div>
        </div>
        </div>
{% endblock %}

