                },
                }) }}
                        </div>
{{ form_rest(form) }}

                    </form>

                    <ul class="record_actions">
                        <li>
                            <a href="{{ path('exportation') }}">
                                Back to the list
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

{% endblock %}

